<html>
 <head>
  <title>Game</title>
  
  <script type="text/javascript" src="http://code.jquery.com/jquery-1.10.2.js"></script>

  <script id="welcome" type="text/template">
    Welcome to the game
  </script>
 
  <script id="question_template" type="text/template">
    <img id="question_img" />
    <table>
      <tr>
        <td><div class="choice" id="choice1" data-id="0">Text1</div></td>
        <td><div class="choice" id="choice2" data-id="1">Text2</div></td>
      </tr>
      <tr>
        <td><div class="choice" id="choice3" data-id="2">Text3</div></td>
        <td><div class="choice" id="choice4" data-id="3">Text4</div></td>
      </tr>
    </table>
  </script>

  <script type="text/javascript" src="/assets/html.js"></script>
  <script type="text/javascript" src="/assets/communication.js"></script>
  <script type="text/javascript" src="/assets/configuration.js"></script>
  <script type="text/javascript" src="/assets/gameplay.js"></script>
  <script type="text/javascript" src="/assets/audio.js"></script>
  <script type="text/javascript" src="/assets/start.js"></script>

  <link rel="stylesheet" type="text/css" href="/assets/style.css">

 </head>
 
  <body>
    <div id="gametitle"></div>
    <div id="mode"></div>
    <div id="timer"></div>


    <div id="container"></div>
    <button id="startGameButton">Start Game</button>

    <table>
      <tr>
        <td>Player 1: <span id="player1_score"></span></td>
        <td>Player 2: <span id="player2_score"></span></td>
        <td>Player 3: <span id="player3_score"></span></td>
      </tr>
    </table>

    <audio id="audio-theme">
      <source src="/audios/theme.mp3" type="audio/mpeg">
    </audio>
    <audio id="audio-buzzer">
      <source src="/audios/buzzer.mp3" type="audio/mpeg">
    </audio>

    <div id="mask"></div>
    <iframe id="ytplayer" type="text/html" width="640" height="360" src="" frameborder="0" allowfullscreen>
  </body>

 </html>


